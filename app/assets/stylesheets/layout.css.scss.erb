#one-column {
  #content {
    padding: 20px;
  }
}

// THREE COLUMNS LAYOUT
// =================
$left_side_width: 200px;
$right_side_width: 240px;
$column_padding: 10px;
$main-width: 940px - ($column_padding * 2) -($left_side_width + $right_side_width);

#three-columns {
  #page {
    overflow: hidden;
    position: relative;
  }
  #left-side {
    width: $left_side_width;
    float: left;
    
    #nav {
      ul {
        list-style: none;
        margin: 0;
        padding: 0;
        
        li {
          border: {
            top: 1px solid #323232;
            bottom: 1px solid #1B1B1B;
          }
          
          a {
            display: block;
            min-height: 28px;
            line-height: 28px;
            position: relative;
            padding: 0 5px 0 10px;
            background: #272727;
            color: #999;
            cursor: pointer;
            text-decoration: none;
            font-size: 11px;
            border-right: 4px solid transparent;
            
            &:hover {
              border-right: 4px solid #6A6A6A;
              background: #000;
              color: #EEE;
              font-weight: bold;
            }
            
            .thumb {
              display: inline-block;
              margin-right: 8px;
              vertical-align: middle;
              
              img {
                display: inline-block;
                height: 16px;
                width: 16px;
                margin-top: 8px;
              }
            }
            .name {
              display: inline-block;
              vertical-align: middle;
            }
          }
        }
      }
    }
  }
  #left-side-background {
    position: absolute;
    z-index: -1;
    top: 5px;
    left: 0;
    width: 200px;
    height: 100%;
    background: #272727;
  }
  #main {
    width: $main-width;
    float: left;
    margin-right: $column_padding;
    margin-left: $column_padding;
    background: transparent;
  }
  #main-background {
    position: absolute;
    z-index: -1;
    top: 0;
    left: $left_side_width + $column_padding;
    width: $main-width;
    height: 100%;
    background: #FFF;
  }
  #right-side {
    width: $right_side_width;
    float: left;
  }
}

